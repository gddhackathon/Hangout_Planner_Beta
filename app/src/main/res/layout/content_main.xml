<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gdd.hangoutplanner.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/santorini"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:cropToPadding="false"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_heading"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold"
        android:textColorLink="#ffffff"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_heading2"
        android:id="@+id/textView2"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold"
        android:textColorLink="#ffffff"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/launch_discover_button_text"
        android:id="@+id/button"
        android:textColor="#FF0A0DAE"
        android:background="@drawable/roundedbutton"
        android:shadowColor="@color/colorPrimary"
        android:textSize="@dimen/abc_text_size_button_material"
        android:textStyle="bold"
        android:ellipsize="middle"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
