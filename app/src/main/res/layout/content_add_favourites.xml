<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gdd.hangoutplanner.AddFavouritesActivity"
    tools:showIn="@layout/activity_add_favourites">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:context="hangoutplanner.gdd.com.testmap.MapsActivity"
        android:layout_above="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your interests"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:fontFamily="@string/auth_google_play_services_client_google_display_name"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/cardview_compat_inset_shadow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_local_bar_black_24dp"
        android:text="Bar"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:button="@drawable/ic_hotel_black_24dp"
        android:id="@+id/checkBox3"
        android:checked="true"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Mall"
        android:button="@drawable/ic_local_mall_black_24dp"
        android:id="@+id/checkBox5"
        android:checked="false"
        android:layout_below="@+id/checkHotel"
        android:layout_toRightOf="@+id/checkHotel"
        android:layout_toEndOf="@+id/checkHotel" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_local_movies_black_24dp"
        android:text="Movies"
        android:id="@+id/checkBox7"
        android:checked="false"
        android:layout_alignTop="@+id/checkMovies"
        android:layout_toRightOf="@+id/checkShopping"
        android:layout_toEndOf="@+id/checkShopping" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_shop_black_24dp"
        android:text="Shopping"
        android:id="@+id/checkBox8"
        android:checked="false"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignTop="@+id/checkShopping"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_local_dining_black_24dp"
        android:text="food"
        android:id="@+id/checkBox9"
        android:checked="false"
        android:layout_alignBottom="@+id/checkLoclMal"
        android:layout_toRightOf="@+id/checkFood"
        android:layout_toEndOf="@+id/checkFood" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/checkBox7"
        android:layout_toEndOf="@+id/checkBox7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBar"
        android:checked="false"
        android:layout_above="@+id/checkBox3"
        android:layout_toLeftOf="@+id/checkBox2"
        android:layout_toStartOf="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkHotel"
        android:checked="false"
        android:layout_below="@+id/checkBar"
        android:layout_alignLeft="@+id/checkBar"
        android:layout_alignStart="@+id/checkBar" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkLoclMal"
        android:checked="false"
        android:layout_below="@+id/checkHotel"
        android:layout_toLeftOf="@+id/checkBox5"
        android:layout_toStartOf="@+id/checkBox5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkMovies"
        android:checked="false"
        android:layout_above="@+id/checkBox3"
        android:layout_toLeftOf="@+id/checkBox7"
        android:layout_toStartOf="@+id/checkBox7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkShopping"
        android:checked="false"
        android:layout_below="@+id/checkMovies"
        android:layout_toLeftOf="@+id/checkBox8"
        android:layout_toStartOf="@+id/checkBox8" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkFood"
        android:checked="false"
        android:layout_alignBottom="@+id/checkBox9"
        android:layout_alignLeft="@+id/checkShopping"
        android:layout_alignStart="@+id/checkShopping" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get places"
        android:textColor="@color/white"
        android:id="@+id/buttonGetPlaces"
        android:background="@drawable/roundedbutton"
        android:onClick="nextPage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map"
        android:layout_marginBottom="44dp" />


</RelativeLayout>
