<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gdd.hangoutplanner.PlaceDetailsActivity"
    tools:showIn="@layout/activity_place_details">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/placeMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context="com.gdd.hangoutplanner.PlaceDetailsActivity"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_action_bar_splitter"
        android:orientation="horizontal"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/placeMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewCpontact"
            android:src="@drawable/ic_contact_phone_black_24dp"
            android:layout_above="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="3dp"
            android:text="309532XXXX"
            android:id="@+id/textView7"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:shadowColor="@color/cardview_light_background"
            android:layout_alignTop="@+id/imageViewCpontact"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_contact_phone_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Intl Phone"
            android:layout_marginLeft="3dp"
            android:id="@+id/textView8"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:shadowColor="@color/cardview_light_background"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_computer_black_24dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ww.testttt.com"
            android:layout_marginLeft="3dp"
            android:id="@+id/textView9"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:shadowColor="@color/cardview_light_background"
            android:layout_below="@+id/textView8"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:shadowColor="@color/cardview_light_background"
            android:layout_height="wrap_content" android:text="CONTACT INFORMATION"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView10"
            android:background="#d3cfcf" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:shadowColor="@color/cardview_light_background"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:id="@+id/textView11"
            android:background="#d3cfcf"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Open Now  : "
        android:id="@+id/textView12"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="open"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:textColor="@color/wallet_bright_foreground_holo_light" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:shadowColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:text="GALLERY"
        android:id="@+id/textView16"
        android:background="#d3cfcf"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/common_full_open_on_phone"
        android:layout_below="@+id/textView16"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toStartOf="@+id/textView14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/common_full_open_on_phone"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/common_full_open_on_phone"
        android:layout_below="@+id/textView16"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:shadowColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:text="REVIEWS"
        android:id="@+id/textView17"
        android:background="#d3cfcf"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
